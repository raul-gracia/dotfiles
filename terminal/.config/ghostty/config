# Ghostty Configuration
# Tokyo Night Storm theme with high contrast

# Font Configuration
font-family = FiraCode Nerd Font
font-family-bold = FiraCode Nerd Font Bold
font-family-italic = FiraCode Nerd Font Italic
font-family-bold-italic = FiraCode Nerd Font Bold Italic
font-size = 13

# Font fallbacks
font-family = Fira Code
font-family = JetBrains Mono
font-family = Monaco

# Window Configuration
window-decoration = true
window-padding-x = 15
window-padding-y = 15
window-save-state = always
window-inherit-working-directory = true
window-colorspace = display-p3

# Background and Opacity
# Note: Background images not yet supported in Ghostty (feature request #3645)
# Using transparency and blur for visual effect instead
background-opacity = 0.90
background-blur-radius = 30

# Cursor Configuration
cursor-style = bar
cursor-style-blink = true
# Cursor color will be automatically set by the theme

# Shell
shell-integration = fish
shell-integration-features = cursor,sudo,title

# Copy on select
copy-on-select = clipboard

# Scrollback
scrollback-limit = 10000

# Tab Configuration
# Note: tab-bar-location is not directly configurable in Ghostty

# Theme - Built-in themes with automatic light/dark switching
# Uses Tokyo Night Moon for dark mode and Primary for light mode
theme = dark:tokyonight_moon,light:primary

# Keybindings (similar to WezTerm configuration)
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = cmd+w=close_surface
keybind = cmd+t=new_tab
keybind = cmd+shift+[=previous_tab
keybind = cmd+shift+]=next_tab
keybind = cmd+k=clear_screen
keybind = cmd+shift+enter=toggle_fullscreen

# Navigate splits with cmd+option+arrows
keybind = cmd+alt+left=goto_split:left
keybind = cmd+alt+right=goto_split:right
keybind = cmd+alt+up=goto_split:top
keybind = cmd+alt+down=goto_split:bottom

# Resize splits
keybind = cmd+ctrl+left=resize_split:left,10
keybind = cmd+ctrl+right=resize_split:right,10
keybind = cmd+ctrl+up=resize_split:up,10
keybind = cmd+ctrl+down=resize_split:down,10

# Tab navigation with cmd+number
keybind = cmd+1=goto_tab:1
keybind = cmd+2=goto_tab:2
keybind = cmd+3=goto_tab:3
keybind = cmd+4=goto_tab:4
keybind = cmd+5=goto_tab:5
keybind = cmd+6=goto_tab:6
keybind = cmd+7=goto_tab:7
keybind = cmd+8=goto_tab:8
keybind = cmd+9=goto_tab:9

# Mouse Configuration
mouse-hide-while-typing = true
focus-follows-mouse = false

# macOS specific
macos-option-as-alt = true
macos-titlebar-style = tabs
macos-titlebar-proxy-icon = visible

# Performance
# Note: max-fps and repaint-delay are not configurable in Ghostty

# Confirm before closing with multiple tabs
confirm-close-surface = true

# Bold text is brighter
bold-is-bright = false

# Auto-update
auto-update = check

# Clipboard
clipboard-read = allow
clipboard-write = allow
clipboard-paste-protection = true
clipboard-trim-trailing-spaces = true

# URLs
link-url = true

# Notifications
desktop-notifications = true

